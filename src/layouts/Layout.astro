---
import codersLogo from "../../assets/Marine Coders Logo.png";
import { Image } from 'astro:assets';
interface Props {
  title?: string
}

const { title = null } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Rubik:wght@300;400;500;700&display=swap"
    />
    <title>MIU {title && "-"} {title}</title>
  </head>
  <body class="bg-slate-200 text-slate-800 dark:bg-slate-800 dark:text-white font-rubik">
    <slot />
    
  </body>
  <footer style="display: flex; align-items: center"><div class="inline-flex align-middle content-between justify-center m-auto">    
      <div style="flex: 4" class="flex items-center max-w-6xl align-middle align-center text-center block text-sm">
          POWERED BY MARINE CODERS
      </div>
      <div style="flex: 1;" class=" items-center max-w-[85rem] px-4 sm:px-6 lg:px-8 pt-inherit" style="height=50%; width=50%;" >
          <Image 
            width="50px"
            height="50px"
            src={codersLogo} 
            alt="Marine Innovation" 
          />
      </div>
    </div>
  </footer>
</html>